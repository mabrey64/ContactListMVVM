<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ContactListMVVM.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ContactListMVVM"
    Shell.FlyoutBehavior="Flyout"
    Title="ContactListMVVM">

    <ShellContent
        Title="Add Contact"
        ContentTemplate="{DataTemplate local:AddContact}"
        Route="AddContactPage" />
    <!--This ShellContent registers the ContactList page with the MAUI Shell navigation. It acts almost like a house address.-->
    <ShellContent
        Title="Contact List"
        ContentTemplate="{DataTemplate local:ContactList}"
        Route="ContactListPage" />

</Shell>
