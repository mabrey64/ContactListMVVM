<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ContactListMVVM.ContactDetailPage"
             Title="ContactDetailPage">
    <VerticalStackLayout>
        <Label Text="Contact Details" FontSize="Title" HorizontalOptions="Center" Margin="0,0,0,15"/>

        <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto,Auto" RowSpacing="5">
            <Label Grid.Row="0" Grid.Column="0" Text="Name:" VerticalOptions="Center"/>
            <Label Grid.Row="0" Grid.Column="1" Text="{Binding Name}" VerticalOptions="Center"/>
            
            <Label Grid.Row="1" Grid.Column="0" Text="Email:" VerticalOptions="Center"/>
            <Label Grid.Row="1" Grid.Column="1" Text="{Binding Email}" VerticalOptions="Center"/>
            
            <Label Grid.Row="2" Grid.Column="0" Text="Phone:" VerticalOptions="Center"/>
            <Label Grid.Row="2" Grid.Column="1" Text="{Binding PhoneNumber}" VerticalOptions="Center"/>

            <Label Grid.Row="3" Grid.Column="0" Text="Description:" VerticalOptions="Center"/>
            <Label Grid.Row="3" Grid.Column="1" Text="{Binding Description}" VerticalOptions="Center"/>
        </Grid>
    </VerticalStackLayout>
</ContentPage>